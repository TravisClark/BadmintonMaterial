@model WebApplication2.Models.DonHang

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/layoutNew.cshtml";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 text-center">
            <h2>THÔNG TIN ĐƠN HÀNG</h2><br />
            <h4 class="mb-3">VUI LÒNG ĐIỀN ĐẦY ĐỦ THÔNG TIN KHI THANH TOÁN</h4>
            <hr />
            
            <div class="card" id="content">
                
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
              
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.KhachHang.customer_name, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-5">
                            @Html.EditorFor(model => model.KhachHang.customer_name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.KhachHang.customer_name, "", new { @class = "text-danger" })
                        </div>
                    </div><br />

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.KhachHang.numberphone, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-5">
                            @Html.EditorFor(model => model.KhachHang.numberphone, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.KhachHang.numberphone, "", new { @class = "text-danger" })
                        </div>
                    </div><br />

                    <div class="form-group">
                        @Html.LabelFor(model => model.KhachHang.address, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-5">
                            @Html.EditorFor(model => model.KhachHang.address, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.KhachHang.address, "", new { @class = "text-danger" })
                        </div>
                    </div><br />

                    <div class="form-group">
                        @Html.LabelFor(model => model.date, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-5">
                            @Html.EditorFor(model => model.date, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.date, "", new { @class = "text-danger" })
                        </div>
                    </div><br />

                    <div class="form-group">
                        @Html.LabelFor(model => model.voucher, "voucher", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-5">
                            @Html.DropDownList("voucher", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.voucher, "", new { @class = "text-danger" })
                        </div>
                    </div><br />

                    <hr />
                    <div>
                        <a href="@Url.Action("Index","Chitietgiohangs")" class="add-cart item_add" style="padding:20px">Quay Lại Giỏ Hàng</a>


                        <a class="add-cart item_btn btn-default " type="submit" style="text-align: center ;padding:20px; min-width: 158px">Thanh Toán</a>
                    </div>
                    
                </div>
                }



                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }
            </div>
        </div>
    </div>
</div>
}


