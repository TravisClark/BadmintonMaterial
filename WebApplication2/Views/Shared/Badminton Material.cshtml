                <div class="logo">
                    <h1><a href="@Url.Action("Index","Home")">Badminton Material</a></h1>
                </div>
                <div class=" h_menu4">
                    <ul class="memenu skyblue">
                        <li><a class="color8" href="index.html">Trang chủ</a></li>
                        <li>
                            <a class="color1" href="#">Sản phẩm</a>
