                            </form>
                        </div>
                    </div>

                    <!-- search-scripts -->
                    <script src="@Url.Content("~/js/classie.js")"></script>
                    <script src="@Url.Content("~/js/uisearch.js")"></script>
                    <script>
                        new UISearch(document.getElementById('sb-search'));
                    </script>
                    <!-- //search-scripts -->

