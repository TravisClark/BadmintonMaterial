@model IEnumerable<WebApplication2.Models.ChiTietGioHang>

@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/layoutNew.cshtml"; }

@foreach (var item in Model)
{

    <div class="col-md-4 order-md-2 mb-4">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">Sản Phẩm Mua :</span>
            <span class="badge badge-secondary badge-pill">@item.SoLuong</span>
        </h4>
        <ul class="list-group mb-3">
            <li class="list-group-item d-flex justify-content-between lh-condensed">
                <div>
                    <img style="text-align:center; width:100px" src="~/images/@item.SanPham.MaSP@ViewBag.hinh" alt="Alternate Text" />
                </div><br />
                
                <div>                   
                    <h6 class="my-0">Tên Sản Phẩm :</h6>
                    <small class="text-muted">@item.SanPham.TenSP</small>
                </div><br />
                <h6 class="my-0">Giá tiền:</h6>
                <span class="text-muted">@item.SanPham.GiaSP</span><br />
            </li>
       </ul>
    </div>
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
