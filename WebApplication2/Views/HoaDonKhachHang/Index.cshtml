<body class="bg-light">
    <div class="container">
        <div class="col-md-8 text-center">
            <li class="list-group-item d-flex justify-content-between bg-light">
                <div class="text-success">
                    <span>Tổng Tiền (VND)</span>
                </div>
                <strong>@ViewBag.Tong</strong>
            </li><br />
            <h2>THÔNG TIN ĐƠN HÀNG</h2>
        </div>

        <div class="row">

            <div class="col-md-8 order-md-1">
                <h4 class="mb-3">VUI LÒNG ĐIỀN ĐẦY ĐỦ THÔNG TIN</h4>
                <form class="needs-validation" novalidate>
                    <div class="row">
                        <br />
                        <div class="col-md-6 mb-3">
                            <label for="firstName">Họ , Họ Lót</label>
                            <input type="text" class="form-control" id="firstName" placeholder="" value="" required>
                            <div class="invalid-feedback">
                                Vui lòng điền họ hợp lệ
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="lastName">Tên</label>
                            <input type="text" class="form-control" id="lastName" placeholder="" value="" required>
                            <div class="invalid-feedback">
                                Vui lòng điền tên hợp lệ
                            </div>
                        </div>
                    </div><br />

                    <div class="mb-3">
                        <label for="email">Số Điện Thoại <span class="text-muted"></span> </label>
                        <input type="text" class="form-control" id="email" placeholder="Vui lòng nhập số điện thoại" value="" required>
                        <div class="invalid-feedback">
                            Vui lòng nhập số điện thoại
                        </div>
                    </div><br />

                    <div class="mb-3">
                        <label for="address">Địa Chỉ Giao Hàng</label>
                        <input type="text" class="form-control" id="address" placeholder="Vui lòng nhập địa chỉ" required>
                        <div class="invalid-feedback">
                            Vui lòng nhập địa chỉ vận chuyển của bạn.
                        </div>
                    </div><br />

                    <div class="mb-3">
                        <label for="address2">Địa Chỉ Khác<span class="text-muted">(Không bắt buộc)</span></label>
                        <input type="text" class="form-control" id="address2" placeholder="Vui lòng nhập địa chỉ khác">
                    </div><br />
                    <div class="mb-3">
                        <label for="address2">Ghi Chú<span class="text-muted"></span></label>
                        <input type="text" class="form-control" id="address2" placeholder="Vui lòng nhập ghi chú">
                    </div><br />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="country">Quốc Gia</label>
                            <select class="custom-select d-block w-100" id="country" required>
                                <option value="">Choose...</option>
                                <option>United States</option>
                                <option>Vietnam</option>
                            </select>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label for="state">Chọn Voucher</label>
                            <select class="custom-select d-block w-100" id="state" required>
                                <option value="">Choose</option>
                                <option>Voucher 1</option>
                                <option>Voucher 2</option>
                                <option>Voucher 3</option>
                                <option>Voucher 4</option>
                                <option>Voucher 5</option>
                            </select>
                        </div><br />

                    </div>
                    <hr class="mb-4">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="save-info">
                        <label class="custom-control-label" for="save-info">Lưu Thông Tin Này Cho Lần Sau</label>
                    </div>
                    <tr>
                        <td><a href="@Url.Action("Index","Chitietgiohangs")" class="add-cart item_add" style="padding:20px">Tiếp Tục Mua Sắm</a></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>

                        <td><a " style=" text-align:center ; padding:20px;min-width:158px" herf="" class="add-cart item_add">Đặt Hàng </a></td>
                    </tr>
                </form>
            </div>
        </div>

        <footer class="text-center">
            BAMINTON MATERIAL
        </footer>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script>window.jQuery || document.write('<script src="/docs/4.3/assets/js/vendor/jquery-slim.min.js"><\/script>')</script>
