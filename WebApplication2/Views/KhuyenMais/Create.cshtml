                                    <div class="col-sm-3">
                                        @Html.EditorFor(model => model.GTapdung, new { htmlAttributes = new { @class = "form-control", @placeholder = "0đ" } })
                                        @Html.ValidationMessageFor(model => model.GTapdung, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                @*Thời gian*@
                                <div class="form-group row">
                                    @Html.LabelFor(model => model.TGbatdau, "Thời gian bắt đầu", htmlAttributes: new { @class = "col-sm-2 text-end control-label col-form-label" })
                                    <div class="col-sm-3">
                                        @Html.EditorFor(model => model.TGbatdau, new { htmlAttributes = new { @class = "form-control mydatepicker", @placeholder = "mm/dd/yyyy" } })
                                        @Html.ValidationMessageFor(model => model.TGbatdau, "", new { @class = "text-danger" })
                                        <div class="input-group-append">
                                            <span class="input-group-text h-100">
                                                <i class="fa fa-calendar"></i>
                                            </span>
                                        </div>
                                    </div>
                                    @Html.LabelFor(model => model.TGketthuc, "Thời gian kết thúc", htmlAttributes: new { @class = "col-sm-1 text-end control-label col-form-label" })
                                    <div class="col-sm-3">
                                        @Html.EditorFor(model => model.TGketthuc, new { htmlAttributes = new { @class = "form-control mydatepicker", @placeholder = "mm/dd/yyyy" } })
                                        @Html.ValidationMessageFor(model => model.TGketthuc, "", new { @class = "text-danger" })
                                        <div class="input-group-append">
                                            <span class="input-group-text h-100">
                                                <i class="fa fa-calendar"></i>
                                            </span>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="border-top">
                                <div class="card-body" style="text-align: right;">
                                    <a href="@Url.Action("Index", "KhuyenMais")">
                                        <button type="button" class="btn btn-secondary"
                                                style="margin-right: 15px;">
                                            Hủy tạo mới
                                        </button>
                                    </a>

                                    <input type="submit" value="Lưu" class="btn btn-default" />
                                </div>
                            </div>
                        </form>
                    }
