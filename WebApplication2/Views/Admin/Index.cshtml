@model IEnumerable<WebApplication2.Models.SanPham>
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "IndexAdmin";
}

<!-- ============================================================== -->
<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Danh sách sản phẩm</h4>
                <div class="ms-auto text-end">
                    <nav aria-label="breadcrumb">
                        <button type="button" class="btn btn-primary" style="margin-bottom: 5px;"><a style="text-decoration: none; color: #fff;" href="@Url.Action("Create","SanPham")">Tạo mới sản phẩm</a></button>

                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Danh sách sản phẩm</h5>
                        <div class="table-responsive">
                            <table id="zero_config" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Mã sản phẩm</th>
                                        <th>Tên sản phẩm</th>
                                        <th>Giá</th>
                                        <th>Số lượng</th>
                                        <th>Ảnh</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MaSP)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TenSP)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.GiaSP)
                                            </td>
                                            <td align="center">
                                                @Html.DisplayFor(modelItem => item.SoLuong)
                                            </td>
                                            <td>
                                                <img src="@Url.Action("Picture",new { item.MaSP })" width="100px" height="100px" />
                                            </td>
                                            <td>
                                                @Html.ActionLink("Edit", "Edit", new { id = item.MaSP }) |
                                                @Html.ActionLink("Delete", "Delete", new { id = item.MaSP })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <footer class="footer text-center">
            All Rights Reserved by Matrix-admin. Designed and Developed by <a href="https://www.wrappixel.com">WrapPixel</a>.
        </footer>
    </div>
</div>
