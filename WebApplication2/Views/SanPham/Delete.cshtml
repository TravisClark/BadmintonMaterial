@model WebApplication2.Models.SanPham

@{
    ViewBag.Title = "Delete";
}
  
        <div class="page-wrapper">
            <div class="page-breadcrumb">
                <div class="row">
                    <div class="col-12 d-flex no-block align-items-center">
                        <h4 class="page-title">Xóa sản phẩm</h4>
                    </div>
                </div>
            </div>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            @using (Html.BeginForm("Delete", "SanPham", FormMethod.Post, new { enctype = "multipart/form-data" }))
