@model WebApplication2.Models.ChiTietDonHang

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h2 class="page-title">Tạo mới sản phẩm</h2>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div>
                        <hr />
                        <dl class="dl-horizontal">

                            <dt>
                                @Html.DisplayName("Tên sản phẩm")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.product_name)
                            </dd>

                            <dt>
                                @Html.DisplayName("Số lượng")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.product_amout)
                            </dd>

                            <dt>
                                @Html.DisplayName("Tổng tiền")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.total_money)
                            </dd>
                        </dl>
                    </div>
                    <p>
                        @Html.ActionLink("Back to List", "Index")
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
