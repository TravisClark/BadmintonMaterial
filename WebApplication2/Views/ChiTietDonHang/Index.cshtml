@model IEnumerable<WebApplication2.Models.ChiTietDonHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h2 class="page-title">Tạo mới sản phẩm</h2>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayName("Tên sản phẩm")
                            </th>
                            <th>
                                @Html.DisplayName("Số lượng")
                            </th>
                            <th>
                                @Html.DisplayName("Tổng tiền")
                            </th>
                            <th>
                                @Html.DisplayName("Mã SP")
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.product_name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.product_amout)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.total_money)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SanPham.MaSP)
                                </td>
                                <td>
                                    @Html.ActionLink("Details", "Details", new { id = item.order_id })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

